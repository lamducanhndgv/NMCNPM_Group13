<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_height="96dp"
                android:layout_width="96dp"
                android:src="@drawable/ic_user_avt"
                app:civ_border_color="#FFF"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/fullname"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Lê Hoàng Vũ"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="lhvubtqn@gmail.com"
                android:textAlignment="center"
                android:textColor="#555555"
                android:textSize="14dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">

                        <com.mikhaellopez.circleview.CircleView
                            android:layout_height="80dp"
                            android:layout_width="80dp"
                            app:cv_border="true"
                            app:cv_border_color="#888"
                            app:cv_border_width="5dp"
                            app:cv_color="#FFF"
                            app:cv_shadow="false" />

                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_check"
                            android:tint="#888" />
                    </RelativeLayout>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:text="BASIC"
                        android:textColor="#888"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:background="@android:color/darker_gray"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:layout_width="match_parent" />

            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">

                    <com.mikhaellopez.circleview.CircleView
                        android:layout_height="80dp"
                        android:layout_width="80dp"
                        app:cv_border="true"
                        app:cv_border_color="#00AA11"
                        app:cv_border_width="5dp"
                        app:cv_color="#FFF"
                        app:cv_shadow="false" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:text="BASIC"
                        android:textColor="#00AA11"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:background="@android:color/darker_gray"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <LinearLayout
                android:id="@+id/btn_account_info"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:layout_height="25dp"
                    android:layout_margin="10dp"
                    android:layout_width="25dp"
                    android:src="@drawable/ic_user"
                    android:tint="#444444" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Thông tin tài khoản"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_spotify_follow"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                fancy:fb_borderColor="#00AA11"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="#FFF"
                fancy:fb_focusColor="#424243"
                fancy:fb_radius="5dp"
                fancy:fb_text="Nâng cấp"
                fancy:fb_textColor="#00AA11"
                fancy:fb_textSize="12dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_notification"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Thông báo"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_menu_camera"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Camera"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_notebook"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sổ tay"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_notes"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Ghi chú"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@android:drawable/ic_popup_sync"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Đồng bộ hóa"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <View
            android:background="@android:color/darker_gray"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@android:drawable/ic_menu_help"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Giúp đỡ"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <ImageView
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_mace"
                android:tint="#444444" />

            <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Giúp "
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>